<h1>Listing line_items</h1>

<table>
  <thead>
    <tr>
      <th>Campaign</th>
      <th>Site</th>
      <th>Impressions</th>
      <th>Clicks</th>
      <th>Ctr</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.campaign %></td>
        <td><%= line_item.site %></td>
        <td><%= line_item.impressions %></td>
        <td><%= line_item.clicks %></td>
        <td><%= line_item.ctr %></td>
        <td><%= line_item.date %></td>
        <td><%= link_to 'Show', line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

