<div class="page-header">
  <h1>Listing Sites</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.postcode %></td>
        <td><%= link_to 'Show', site_path(site) %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Site', new_site_path, method: :get, class: "btn btn-large btn-primary" %>
